<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3ECD1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/linearlayout_border_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noBookmarkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:lineSpacingExtra="17sp"
            android:padding="10dp"
            android:text="등록된 즐겨찾기가 없습니다.\n즐겨찾기를 추가하고 사용해 주세요!"
            android:textAlignment="center"
            android:textColor="#7E7A7A"
            android:textSize="15sp"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookmarkListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />
    </LinearLayout>

</LinearLayout>